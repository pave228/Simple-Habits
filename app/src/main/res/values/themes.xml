<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основная тема для приложения -->
    <style name="Theme.Habits" parent="Theme.AppCompat.DayNight">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#6F8FFA</item>
        <item name="colorControlActivated">#688CFF</item> <!-- Цвет, когда чекбокс включен -->
        <item name="colorControlNormal">@color/colorPrimaryDark</item> <!-- Цвет, когда чекбокс выключен -->
    </style>

    <!-- Тема для темного режима -->
    <style name="Theme.Habits.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <!-- Стили текста -->
    <style name="TextAppearance.Habits.Title" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
</resources>
